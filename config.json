{
  "name": "Telegram网盘机器人",
  "version": "1.0.0",
  "description": "一个功能强大的Telegram文件分享机器人，支持文件上传、下载、搜索、分享、转存等功能",

  "telegram": {
    "token": "832242:AAkuwppZK5xB0",
    "admin_id": ,
    "channel_id": -1004893220000,
    "proxy": {
      "enabled": false,
      "host": "127.0.0.1",
      "port": 1080,
      "username": "",
      "password": "",
      "type": "http"
    }
  },

  "database": {
    "type": "sqlite",
    "path": "data/bot.db"
  },

  "redis": {
    "host": "localhost",
    "port": 6379,
    "db": 0,
    "enabled": false
  },

  "upload": {
    "max_file_size": 2000,
    "allowed_types": ["document", "photo", "video", "audio"],
    "max_downloads_per_file": 0,
    "max_uploads_per_day": 100
  },

  "user": {
    "default_storage_limit": 5368709120,
    "vip_storage_limit": 53687091200,
    "max_file_count": 1000
  },

  "rate_limit": {
    "upload_per_user": 100,
    "download_per_user": 1000,
    "search_per_user": 50
  },

  "web_server": {
    "enabled": false,
    "host": "0.0.0.0",
    "port": 8080
  },

  "features": {
    "share_links": true,
    "password_protection": true,
    "file_search": true,
    "file_transfer": true,
    "collections": true,
    "statistics": true
  },

  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/bot.log",
    "max_size": 10485760,
    "backup_count": 5
  },

  "backup": {
    "enabled": true,
    "interval": 86400,
    "keep_copies": 7
  }
}
